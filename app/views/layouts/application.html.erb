<!DOCTYPE html>
<html>
  <head>
    <title>Fantasy Fleet</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee&display=swap" rel="stylesheet">
  </head>
  <body>
    <!-- MAIN Navbar -->
    <%= render "shared/navbar" %>
    <!-- CATEGORIES ICONS Navbar -->
    <% if current_page?(root_path) %>
      <%= render "shared/hero" %>
    <% end %>
    <%= render "shared/category_navbar" %>
    <!-- Devise alerts and notice -->
    <% if notice.present? %>
      <div class="alert alert-success alert-dismissible fade show text-center fs-6" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert alert-danger alert-dismissible fade show text-center fs-6" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <%= yield %>
    <!-- Footer -->
    <%= render "shared/footer" %>
  </body>
</html>
